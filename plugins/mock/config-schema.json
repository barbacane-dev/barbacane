{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:barbacane:schema:mock-config",
  "title": "Mock Dispatcher Config",
  "description": "Configuration for the mock dispatcher plugin",
  "type": "object",
  "properties": {
    "status": {
      "type": "integer",
      "description": "HTTP status code to return",
      "default": 200,
      "minimum": 100,
      "maximum": 599
    },
    "body": {
      "type": "string",
      "description": "Response body to return",
      "default": ""
    },
    "headers": {
      "type": "object",
      "description": "Additional response headers",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "content_type": {
      "type": "string",
      "description": "Content-Type header value",
      "default": "application/json"
    }
  },
  "additionalProperties": false
}
